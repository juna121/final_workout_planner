<% if @bodypart.present? %>
  <% if @bodypart.errors.any? %>
    <% @bodypart.errors.full_messages.each do |message| %>
      <div class="alert alert-danger">
        <%= message %>
      </div>
    <% end %>
  <% end %>
<% end %>

<h1>
  Add a new bodypart
</h1>


<hr>

<form action="/create_bodypart" method="post">

  <div class="form-group">
    <label for="name">
      Name
    </label>

    <input type="text" id="name" name="name" class="form-control" value="<%= @bodypart.name %>">
  </div>

  <button class="btn btn-block btn-outline-secondary">
    Create bodypart
  </button>
</form>

<hr>

<a href="/bodyparts">
  Go back
</a>
