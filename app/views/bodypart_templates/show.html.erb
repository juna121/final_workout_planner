<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <h1>
      Bodypart #<%= @bodypart.id %> details
    </h1>

    <div class="row mb-3">
      <div class="col">
        <a href="/bodyparts" class="btn btn-block btn-outline-secondary">
          Go back
        </a>
      </div>

      <div class="col">
        <a href="/bodyparts/<%= @bodypart.id %>/edit" class="btn btn-block btn-outline-secondary">
          Edit bodypart
        </a>
      </div>

      <div class="col">
        <a href="/delete_bodypart/<%= @bodypart.id %>" class="btn btn-block btn-outline-secondary">
          Delete bodypart
        </a>
      </div>
    </div>

    <dl>
      <dt>
        Name
      </dt>
      <dd>
        <%= @bodypart.name %>
      </dd>

      <dt>
        Created at
      </dt>
      <dd>
        <%= time_ago_in_words(@bodypart.created_at) %> ago
      </dd>

      <dt>
        Updated at
      </dt>
      <dd>
        <%= time_ago_in_words(@bodypart.updated_at) %> ago
      </dd>
    </dl>
  </div>
</div>

<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <%= render partial: "bodypart_templates/bodypart_exercises" %>
  </div>
</div>
