<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <h1>
      Bodypart #<%= @bodypart.id %> details
    </h1>

    <div class="row mb-3">
      <div class="col">
        <a href="/bodyparts" class="btn btn-block btn-outline-secondary">
          Go back
        </a>
      </div>

      <!-- Edit link bodypart start -->
      <div class="col">
        <a href="/bodyparts/<%= @bodypart.id %>/edit" class="btn btn-block btn-outline-secondary">
          Edit bodypart
        </a>
      </div>
      <!-- Edit link bodypart end -->

      <!-- Delete link bodypart start -->
      <div class="col">
        <a href="/delete_bodypart/<%= @bodypart.id %>" class="btn btn-block btn-outline-secondary">
          Delete bodypart
        </a>
      </div>
      <!-- Delete link bodypart end -->
    </div>

    <dl>
      <dt>
        Name
      </dt>
      <!-- Display name start -->
      <dd>
        <%= @bodypart.name %>
      </dd>
      <!-- Display name end -->

      <dt>
        Created at
      </dt>
      <!-- Display created_at start -->
      <dd>
        <%= time_ago_in_words(@bodypart.created_at) %> ago
      </dd>
      <!-- Display created_at end -->

      <dt>
        Updated at
      </dt>
      <!-- Display updated_at start -->
      <dd>
        <%= time_ago_in_words(@bodypart.updated_at) %> ago
      </dd>
      <!-- Display updated_at end -->
    </dl>
  </div>
</div>

<!-- Show Page Customization starts -->
<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <%= render partial: "bodypart_templates/bodypart_exercises" %>
  </div>
</div>
<!-- Show Page Customization end -->
