<div class="card">
  <div class="card-header d-flex align-items-center justify-content-between">
    Exercises

    <a data-toggle="collapse" href="#bodypart_exercises_new_form">
      Add exercise
    </a>
  </div>

  <ul class="list-group list-group-flush">
    <% @bodypart.exercises.each do |exercise| %>
      <li class="list-group-item d-flex align-items-center justify-content-between">
        <a href="/exercises/<%= exercise.id %>">
          <%= exercise.name %>
        </a>

        <a href="/delete_exercise_from_bodypart/<%= exercise.id %>">
          Delete
        </a>

      </li>
    <% end %>

    <div class="card-footer">
      <div class="collapse" id="bodypart_exercises_new_form">
        <%= render partial: "bodypart_templates/bodypart_exercises_new_form" %>
      </div>
    </div>

  </ul>
</div>
