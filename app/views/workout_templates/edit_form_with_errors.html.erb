<!-- Form workout start -->
<form action="/update_workout/<%= @workout.id %>" method="post">
<!-- Form workout end -->

  <!-- Label and input for user_id start -->
  <!-- Label and input for user_id end -->

  <button class="btn btn-block btn-outline-secondary">
    Update workout
  </button>
</form>

<hr>

<a href="/workouts">
  Go back
</a>
