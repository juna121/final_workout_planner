<form action="/create_circuit_from_workout" method="post">

  <input type="hidden" name="workout_id" value="<%= @workout.id %>">

  <div class="form-group">
    <label for="exercise_id">
      Exercise
    </label>

    <%= select_tag(:exercise_id, options_from_collection_for_select(Exercise.all, :id, :name, @circuit.exercise_id), :class => "form-control") %>
  </div>

  <div class="form-group">
    <label for="reps">
      Reps
    </label>

    <input type="text" id="reps" name="reps" class="form-control" value="<%= @circuit.reps %>">
  </div>

  <div class="form-group">
    <label for="sets">
      Sets
    </label>

    <input type="text" id="sets" name="sets" class="form-control" value="<%= @circuit.sets %>">
  </div>

  <div class="form-group">
    <label for="weight">
      Weight
    </label>

    <input type="text" id="weight" name="weight" class="form-control" value="<%= @circuit.weight %>">
  </div>

  <div class="form-group">
    <label for="unit">
      Unit
    </label>

    <input type="text" id="unit" name="unit" class="form-control" value="<%= @circuit.unit %>">
  </div>

  <div class="form-group">
    <label for="note">
      Note
    </label>

    <input type="text" id="note" name="note" class="form-control" value="<%= @circuit.note %>">
  </div>

  <button class="btn btn-block btn-outline-secondary">
    Create circuit
  </button>
</form>
