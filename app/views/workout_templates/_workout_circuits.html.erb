<div class="card">
  <div class="card-header d-flex align-items-center justify-content-between">
    Circuits

    <a data-toggle="collapse" href="#workout_circuits_new_form">
      Add circuit
    </a>
  </div>

  <ul class="list-group list-group-flush">
    <% @workout.circuits.each do |circuit| %>
      <li class="list-group-item d-flex align-items-center justify-content-between">
        <a href="/circuits/<%= circuit.id %>">
          <%= circuit.workout_id %>
        </a>

        <a href="/delete_circuit_from_workout/<%= circuit.id %>">
          Delete
        </a>

      </li>
    <% end %>

    <div class="card-footer">
      <div class="collapse" id="workout_circuits_new_form">
        <%= render partial: "workout_templates/workout_circuits_new_form" %>
      </div>
    </div>

  </ul>
</div>
