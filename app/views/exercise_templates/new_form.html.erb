<h1>
  Add a new exercise
</h1>


<hr>

<!-- Form exercise start -->
<form action="/create_exercise" method="post">
<!-- Form exercise end -->

  <!-- Label and input for name start -->
  <div class="form-group">
    <label for="name">
      Name
    </label>

    <!-- Input for name start -->
    <input type="text" id="name" name="name" class="form-control">
    <!-- Input for name end -->
  </div>
  <!-- Label and input for name end -->

  <!-- Label and input for bodypart_id start -->
  <div class="form-group">
    <label for="bodypart_id">
      Bodypart
    </label>

    <!-- Input for bodypart_id start -->
    <%= select_tag(:bodypart_id, options_from_collection_for_select(Bodypart.all, :id, :name, @exercise.bodypart_id), :class => "form-control") %>
    <!-- Input for bodypart_id end -->
  </div>
  <!-- Label and input for bodypart_id end -->

  <button class="btn btn-block btn-outline-secondary">
    Create exercise
  </button>
</form>

<hr>

<a href="/exercises">
  Go back
</a>
