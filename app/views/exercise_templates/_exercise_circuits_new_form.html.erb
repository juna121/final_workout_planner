<!-- Form circuit start -->
<form action="/create_circuit_from_exercise" method="post">
<!-- Form circuit end -->

  <!-- Label and input for workout_id start -->
  <div class="form-group">
    <label for="workout_id">
      Workout
    </label>

    <!-- Input for workout_id start -->
    <input type="text" id="workout_id" name="workout_id" class="form-control" value="<%= @circuit.workout_id %>">
    <!-- Input for workout_id end -->
  </div>
  <!-- Label and input for workout_id end -->

  <!-- Label and input for exercise_id start -->
  <!-- Input for exercise_id start -->
  <input type="hidden" name="exercise_id" value="<%= @exercise.id %>">
  <!-- Input for exercise_id end -->

  <!-- Label and input for reps start -->
  <div class="form-group">
    <label for="reps">
      Reps
    </label>

    <!-- Input for reps start -->
    <input type="text" id="reps" name="reps" class="form-control" value="<%= @circuit.reps %>">
    <!-- Input for reps end -->
  </div>
  <!-- Label and input for reps end -->

  <!-- Label and input for sets start -->
  <div class="form-group">
    <label for="sets">
      Sets
    </label>

    <!-- Input for sets start -->
    <input type="text" id="sets" name="sets" class="form-control" value="<%= @circuit.sets %>">
    <!-- Input for sets end -->
  </div>
  <!-- Label and input for sets end -->

  <!-- Label and input for weight start -->
  <div class="form-group">
    <label for="weight">
      Weight
    </label>

    <!-- Input for weight start -->
    <input type="text" id="weight" name="weight" class="form-control" value="<%= @circuit.weight %>">
    <!-- Input for weight end -->
  </div>
  <!-- Label and input for weight end -->

  <!-- Label and input for unit start -->
  <div class="form-group">
    <label for="unit">
      Unit
    </label>

    <!-- Input for unit start -->
    <input type="text" id="unit" name="unit" class="form-control" value="<%= @circuit.unit %>">
    <!-- Input for unit end -->
  </div>
  <!-- Label and input for unit end -->

  <!-- Label and input for note start -->
  <div class="form-group">
    <label for="note">
      Note
    </label>

    <!-- Input for note start -->
    <input type="text" id="note" name="note" class="form-control" value="<%= @circuit.note %>">
    <!-- Input for note end -->
  </div>
  <!-- Label and input for note end -->

  <button class="btn btn-block btn-outline-secondary">
    Create circuit
  </button>
</form>
