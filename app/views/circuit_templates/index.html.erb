<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All circuits
    </h1>

    <a href="/circuits/new" class="btn btn-block btn-outline-secondary">
      Add a new circuit
    </a>
  </div>
</div>

<!-- Ransack Code start -->

