<!-- Location Map Code end -->

<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Workout
        </th>

        <th>
          Exercise
        </th>

        <th>
          Reps
        </th>

        <th>
          Sets
        </th>

        <th>
          Weight
        </th>

        <th>
          Unit
        </th>

        <th>
          Note
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @circuits.each do |circuit| %>
      <tr>
        <!-- Display circuit.id start -->
        <td>
          <%= circuit.id %>
        </td>
        <!-- Display circuit.id end -->

        <!-- Display circuit.workout_id start -->
        <td>
          <%= circuit.workout_id %>
        </td>
        <!-- Display circuit.workout_id end -->

        <!-- Display circuit.exercise_id start -->
        <td>
          <%= circuit.exercise_id %>
        </td>
        <!-- Display circuit.exercise_id end -->

        <!-- Display circuit.reps start -->
        <td>
          <%= circuit.reps %>
        </td>
        <!-- Display circuit.reps end -->

        <!-- Display circuit.sets start -->
        <td>
          <%= circuit.sets %>
        </td>
        <!-- Display circuit.sets end -->

        <!-- Display circuit.weight start -->
        <td>
          <%= circuit.weight %>
        </td>
        <!-- Display circuit.weight end -->

        <!-- Display circuit.unit start -->
        <td>
          <%= circuit.unit %>
        </td>
        <!-- Display circuit.unit end -->

        <!-- Display circuit.note start -->
        <td>
          <%= circuit.note %>
        </td>
        <!-- Display circuit.note end -->

        <!-- Display circuit.created_at start -->
        <td>
          <%= time_ago_in_words(circuit.created_at) %> ago
        </td>
        <!-- Display circuit.created_at end -->

        <!-- Display circuit.updated_at start -->
        <td>
          <%= time_ago_in_words(circuit.updated_at) %> ago
        </td>
        <!-- Display circuit.updated_at end -->

        <td>
          <a href="/circuits/<%= circuit.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
